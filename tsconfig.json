{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2015",
    "skipLibCheck": true,
    "outDir": "./lib",
    "lib": ["es2015", "es2015.promise", "dom"],
    "types": ["node"]
  },
  "include": ["src/*"]
}
